    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drkhamzat/bizon.git"
  },
  "keywords": [
    "mern",
    "furniture",
    "ecommerce",
    "react",
    "node",
    "mongodb"
  ],
